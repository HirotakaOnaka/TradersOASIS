<section>
<div class="container mt-5">
  <div class="row">

    <div class="col-lg-8 mx-auto text-center">
      <h2 class="section-heading"><%= @note.trading_method %></h2>
      <hr class="orange my-4">
      <h6 class="section-heading">作成日時：<%= simple_time(@note.created_at) %></h6>
    </div>

    <div class="offset-md-1 col-md-10 mt-4 mt-md-0">
      <div class="form-group detail">
        <label>Trading method</label>
        <p class="form-control">
          <%= @note.trading_method %>
        </p>
      </div>

      <div class="form-group detail">
        <label>取引ペア</label>
        <p class="form-control">
          <%= @note.pair %>
        </p>
      </div>

      <div class="form-group detail">
        <label>注文</label>
        <p class="form-control">
          <%= @note.order %>
        </p>
      </div>

      <div class="form-group detail">
        <label>Lot</label>
        <p class="form-control">
          <%= @note.lot %>
        </p>
      </div>

      <div class="form-group detail">
        <label>Entry</label>
        <p class="form-control">
          <%= @note.entry_rate %>　（Entry Date ・・・　<%= simple_time(@note.entry_date) %>）
        </p>
      </div>


      <div class="form-group detail">
        <label>Contract</label>
        <p class="form-control">
          <%= @note.contract_rate %>　（Contract Date ・・・　<%= simple_time(@note.contract_date) %>）
        </p>
      </div>

      <div class="form-group detail">
        <label>Pips</label>
        <p class="form-control">
          <span class="plus <%= 'minus' if @note.pips < 0 %>"><%= @note.pips %></span>
        </p>
      </div>

      <div class="form-group detail">
        <label>Comment</label>
        <div class="form-control">
          <%== @note.comment %>
        </p>
      </div>

      <div class="form-group detail">
        <label>評価</label>
        <p class="form-control">
          <%= @note.score %>
        </p>
      </div>

      <div class="form-group">
        <%= link_to 'Edit', edit_note_path(@note), :class=>"btn-shine-orange" %>
      </div>

      <div class="text-center">
        <%= link_to 'Back', :back %>
      </div>

  </div>
</div>
</section>