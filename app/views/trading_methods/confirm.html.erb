  <%= f.hidden_field :title %>
  <%= f.hidden_field :introduction %>
  <%= f.hidden_field :pair %>
  <%= f.hidden_field :style %>
  <%= f.hidden_field :indicator %>
  <%= f.hidden_field :market %>
  <%= f.hidden_field :chart %>
  <%= f.hidden_field :content1 %>
  <%= f.hidden_field :summery %>
    <div>
      <%= f.submit "もどる", name: 'back' %>
    </div>
<% end %>